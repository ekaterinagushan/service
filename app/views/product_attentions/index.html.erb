<p id="notice"><%= notice %></p>

<h1>Product Attentions</h1>

<table>
  <thead>
    <tr>
      <th>Actual danger</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_attentions.each do |product_attention| %>
      <tr>
        <td><%= product_attention.actual_danger_id %></td>
        <td><%= product_attention.product_id %></td>
        <td><%= link_to 'Show', product_attention %></td>
        <td><%= link_to 'Edit', edit_product_attention_path(product_attention) %></td>
        <td><%= link_to 'Destroy', product_attention, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

