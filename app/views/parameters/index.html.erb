<p id="notice"><%= notice %></p>

<h1>Parameters</h1>

<table>
  <thead>
    <tr>
      <th>Ingredient</th>
      <th>Actual danger</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parameters.each do |parameter| %>
      <tr>
        <td><%= parameter.ingredient_id %></td>
        <td><%= parameter.actual_danger_id %></td>
        <td><%= link_to 'Show', parameter %></td>
        <td><%= link_to 'Edit', edit_parameter_path(parameter) %></td>
        <td><%= link_to 'Destroy', parameter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

